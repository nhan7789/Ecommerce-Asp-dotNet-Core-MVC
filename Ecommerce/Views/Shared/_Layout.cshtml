        <div class="bg-wrap-header-bot">
            <div class="wrap-header-section-bot">
                <div class="logo-header-bot">
                    <a asp-action="Index"
                       asp-controller="Home" asp-area="">
                        <img src="~/images/logo/logo.png" title="Logo" alt="Logo" />
                    </a>
                </div>

                <div class="content-header-bot">
                    <vc:navigation-menu />
                </div>
                <div class="button-header-bot">
                    <form onsubmit="event.preventDefault();" class="search-form">
                        <input id="search" type="search" class="search-input" placeholder="SEARCH">
                        <button class="search-button">
                            Search
                        </button>
                    </form>
                    <div class="content-header-bot">
                        <vc:cart-summary />
