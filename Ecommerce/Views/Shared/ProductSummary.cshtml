
@model Common.Entites.Product
<!-- single product -->
<div class="col-lg-4 col-md-6">
    <div class="single-product">
        <img src="~/picture/@Model.ProductImage" class="img-fluid" alt="@Model.ProductName" />
        <div class="product-details">
            <div class="p-infor">
                @Model.ProductName
            </div>
            <div class="price">
                <h6>@Model.ProductPrice.ToString("c")</h6>
                <h6 class="l-through">@Model.ProductPrice.ToString("c")</h6>
            </div>
            <div class="prd-bottom">
                <form id="@Model.ProductId" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="@Model.ProductId" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-sm pull-right" style="float: right; color: #000000; background-color: #8ecae6 ">
                        Add To Cart
                    </button>
                </form>
                <a href="" class="social-info">
                    <span class="lnr lnr-heart"></span>
                    <p class="hover-text">Wishlist</p>
                </a>
                <a href="" class="social-info">
                    <span class="lnr lnr-sync"></span>
                    <p class="hover-text">compare</p>
                </a>
                <a href="" class="social-info">
                    <span class="lnr lnr-move"></span>
                    <p class="hover-text">view more</p>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- single product -->