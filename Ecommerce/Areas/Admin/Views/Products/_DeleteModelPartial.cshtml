
@model Common.Entites.Product

<div class="modal fade" id="Delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteProduct"> Delete Product </h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span> X </span>
                </button>
            </div>

            <div class="modal-body">
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.ProductImage)
                    </dt>
                    <dd class="col-sm-7">
                        <img src="~/picture/@Model.ProductImage" style="height:100px; width:100px" alt="@Model.ProductName" />
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.ProductPrice)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal"> Close </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
